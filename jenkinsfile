pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/SyedAddan/MLops-Jenkins-Task.git'
            }
        }

        stage('Build') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Test') {
            steps {
                sh 'python3 test.py'
            }
        }

        stage('Deploy') {
            steps {
                sh 'echo "Deployed!!!"'
            }
        }
    }
}
