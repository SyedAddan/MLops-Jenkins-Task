pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/SyedAddan/MLops-Jenkins-Task.git'
            }
        }

        stage('Build') {
            steps {
                bat 'pip install -r requirements.txt'
            }
        }

        stage('Test') {
            steps {
                bat 'python test.py'
            }
        }

        stage('Deploy') {
            steps {
                def deployGroovy = "load deploy.groovy"
                deployGroovy.deploy()
            }
        }
    }
}
